<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/luncher_bg"
    tools:context="com.csw.ms.mobilesafe.SplashActivity"
    android:id="@+id/rl_root_splash">

    <!--版本号-->

    <TextView
        android:id="@+id/tv_splash_version"
        android:text="版本：v1.0"
        android:textSize="22sp"
        android:textColor="#000000"
        android:shadowColor="#ff0000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <!--加载进度条-->
    <ProgressBar
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_splash_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_splash_udpateinfo"
        android:text="@string/title_splash_udpateinfo"
        android:textSize="22sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
