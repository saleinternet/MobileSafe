<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LostFindActivity">

    <TextView
        android:id="@+id/tv_title_lostfind"
        android:textSize="22sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#8866ff00"
        android:text="手机防盗"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="安全号码"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_lost_find_phone"
            android:text="xxxx"
            android:textSize="20sp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="#44000000"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="防盗保护是否开启"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/lock"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="#44000000"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:clickable="true"
            android:onClick="reEnterSetup"
            android:text="重新进入设置向导"
            android:textColor="#000000"
            android:textSize="20sp"
            android:background="@drawable/shape_selector"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_marginTop="5dp"
        android:background="#44000000"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"></View>

    <TextView
        android:text="功能简介"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:background="#44000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="GPS追踪:#*location*#"
        android:drawableLeft="@android:drawable/star_big_on"
        style="@style/text_content_style"/>

    <TextView
        android:text="播放报警音乐:#*alarm*#"
        android:drawableLeft="@android:drawable/star_big_on"
        android:gravity="center_vertical"
        style="@style/text_content_style"/>

    <TextView
        android:text="远程数据销毁:#*wipedata*#"
        android:drawableLeft="@android:drawable/star_big_on"
        style="@style/text_content_style"/>

    <TextView
        android:text="远程锁屏:#*lockscreen*#"
        android:drawableLeft="@android:drawable/star_big_on"
        style="@style/text_content_style"/>

    
</LinearLayout>
