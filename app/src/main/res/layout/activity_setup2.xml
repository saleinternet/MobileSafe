<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:csw="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_lostfind"
        android:textSize="22sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#8866ff00"
        android:text="2.手机卡绑定"/>

    <TextView
        android:text="通过绑定SIM卡:"
        style="@style/text_content_style"/>

    <TextView
        android:text="下次重启手机如果发现SIM卡变化\n就会发送报警短信"
        style="@style/text_content_style" />

    <com.csw.ms.mobilesafe.ui.SettingItemView
        csw:name="点击绑定SIM卡"
        csw:desc_on="SIM卡已经绑定"
        csw:desc_off="SIM卡没有绑定"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </com.csw.ms.mobilesafe.ui.SettingItemView>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:src="@android:drawable/presence_invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@android:drawable/presence_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@android:drawable/presence_invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@android:drawable/presence_invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/bind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            style="@style/button_prev_style"/>

        <Button
            style="@style/button_next_style"/>

    </RelativeLayout>

</LinearLayout>
